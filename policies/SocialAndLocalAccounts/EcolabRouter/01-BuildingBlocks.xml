<?xml version="1.0" encoding="utf-8" ?>
<TrustFrameworkPolicy xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns="http://schemas.microsoft.com/online/cpim/schemas/2013/06" PolicySchemaVersion="0.3.0.0" TenantId="{Settings:Tenant}" PolicyId="B2C_1A_EcolabRouter_BuildingBlocks" PublicPolicyUri="http://{Settings:Tenant}/B2C_1A_EcolabRouter_BuildingBlocks">

    <BasePolicy>
        <TenantId>{Settings:Tenant}</TenantId>
        <PolicyId>B2C_1A_TrustFrameworkExtensions</PolicyId>
    </BasePolicy>

    <BuildingBlocks>
        <ClaimsSchema>
            <ClaimType Id="login_hint">
                <DisplayName>Login Hint for AAD</DisplayName>
                <DataType>string</DataType>
                <UserHelpText/>
            </ClaimType>
            <ClaimType Id="domain_hint">
                <DisplayName>Domain Hint for AAD</DisplayName>
                <DataType>string</DataType>
                <UserHelpText/>
            </ClaimType>
            <ClaimType Id="mystate">
                <DisplayName>State for AAD</DisplayName>
                <DataType>string</DataType>
                <UserHelpText/>
            </ClaimType>
            <ClaimType Id="reduri">
                <DisplayName>Redirect URI for AAD</DisplayName>
                <DataType>string</DataType>
                <UserHelpText/>
            </ClaimType>
            <ClaimType Id="nonce">
                <DisplayName>Nonce for AAD</DisplayName>
                <DataType>string</DataType>
                <UserHelpText/>
            </ClaimType>
        </ClaimsSchema>
    </BuildingBlocks>

</TrustFrameworkPolicy>